<h1>Editing Book</h1>

<% if @book.errors.any? %>
<p><%=@book.errors.count%>errors prohibited this book from being saved</p>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@book, url:"/books/#{@book.id}",
local:true do |f| %>
<div class="field">
<h4>Title</h4>
<%= f.text_field :title %>
</div>
<div class="field">
<h4>Body</h4>
<%= f.text_area :body %>
</div>
<div class="action"><%= f.submit 'Update Book' %></div>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>

<% end %>
