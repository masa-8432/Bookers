<p id = "notice">
  <%= notice %>
</p>


<h1>Books</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th clospan = "3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td>
        <%= link_to "Destroy", book_path(book.id), method: :delete,
"data-confirm" => "Are you sure?" %>
      </td>
    </tr>
  </tbody>
<% end %>
</table>



<h2>New book</h2>
<% if @book.errors.any? %>
<p><%=@book.errors.count%>errors prohibited this book from being saved</p>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model:@book, local:true do |f| %>

<div class="field">
<h5>Title</h5>
<%= f.text_field :title %>
</div>
<div class="field">
<h5>Body</h5>
<%= f.text_area :body %>
</div>
<div class="action">
<%=f.submit 'Create Book' %>
</div>
<% end %>